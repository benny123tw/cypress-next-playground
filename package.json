{
  "name": "playground",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.6.11",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir .",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "@formatjs/intl-localematcher": "^0.4.0",
    "@mdx-js/loader": "^2.3.0",
    "@mdx-js/react": "^2.3.0",
    "@next/mdx": "^13.4.13",
    "@types/mdx": "^2.0.6",
    "@types/node": "20.4.5",
    "@types/react": "18.2.17",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.14",
    "clsx": "^2.0.0",
    "contentlayer": "^0.3.4",
    "cypress": "^12.17.4",
    "eslint-config-next": "13.4.12",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.0",
    "negotiator": "^0.6.3",
    "next": "13.4.12",
    "next-contentlayer": "^0.3.4",
    "postcss": "8.4.27",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-pretty-code": "^0.10.0",
    "rehype-slug": "^5.1.0",
    "remark-gfm": "^3.0.1",
    "server-only": "^0.0.1",
    "shiki": "^0.14.3",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "3.3.3",
    "theme-change": "^2.5.0",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/typography": "^0.5.9",
    "@types/negotiator": "^0.6.1",
    "daisyui": "^3.5.1",
    "eslint": "8.46.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "simple-git-hooks": "^2.9.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write -u"
    ],
    "!**/*.{js,ts,jsx,tsx}": "prettier --write -u"
  }
}
